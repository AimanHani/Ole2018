<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.PrivateLeagueController.PrivateLeagueSpecialsList">

    <ListView
        android:id="@+id/specialListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/askOleButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:typeface="sans" />

    <Button
        android:id="@+id/confirmspecialsbtn"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:background="@color/themeColor"
        android:baselineAligned="false"
        android:text="SAVE MY SPECIALS"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>