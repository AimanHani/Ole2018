<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.FAQ.FAQProfile">


    <ExpandableListView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/faqAskMore"
        android:layout_below="@+id/faqProfileHeader"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp">


    </ExpandableListView>

    <TextView
        android:id="@+id/faqAskMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/askOleButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Couldn't find what you're looking for?\nAsk us away!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/output" />

    <Button
        android:id="@+id/askOleButton"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:background="@color/themeColor"
        android:baselineAligned="false"
        android:text="Ask Ole!"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>