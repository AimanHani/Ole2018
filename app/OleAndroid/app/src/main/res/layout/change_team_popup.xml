        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintVertical_bias="0.55" />-->

    <TextView
        android:id="@+id/message"
        android:layout_width="265dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Select Team Below"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/favouriteTeamSpinner"
        app:layout_constraintEnd_toEndOf="@+id/popupDialogFrame"
        app:layout_constraintStart_toStartOf="@+id/popupDialogFrame"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <Spinner
        android:id="@+id/favouriteTeamSpinner"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Select your country"
        android:spinnerMode="dropdown"
        android:dropDownWidth="318dp"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintEnd_toEndOf="@+id/popupDialogFrame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/popupDialogFrame"
        app:layout_constraintTop_toBottomOf="@+id/icon"/>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="Confirm"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/popupDialogFrame"
        app:layout_constraintEnd_toEndOf="@+id/popupDialogFrame"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput"
        app:layout_constraintVertical_bias="0.755" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="Cancel"
        android:textColor="@color/dimgrey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/popupDialogFrame"
        app:layout_constraintEnd_toStartOf="@+id/confirm"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput"
        app:layout_constraintVertical_bias="0.755" />

</android.support.constraint.ConstraintLayout>
