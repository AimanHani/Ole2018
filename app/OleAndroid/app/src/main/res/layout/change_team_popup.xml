    <RelativeLayout
        android:id="@+id/popupDialogFrame"
        android:layout_width="345dp"
        android:layout_height="333dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@color/themeColor"
            android:orientation="vertical">

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/footballteam"
        app:layout_constraintBottom_toBottomOf="@+id/smsInput"
        app:layout_constraintEnd_toEndOf="@+id/popupDialogFrame"
        app:layout_constraintStart_toStartOf="@+id/popupDialogFrame"
        app:layout_constraintTop_toTopOf="@+id/popupDialogFrame"
        app:layout_constraintVertical_bias="0.0" />

    <!--<EditText-->
