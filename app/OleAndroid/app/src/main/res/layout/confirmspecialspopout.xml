<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center">

<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.5"
    android:background="@color/black"/>

<RelativeLayout
    android:id="@+id/popupDialogFrame"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="@+id/view"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/view"
    app:layout_constraintVertical_bias="0.483">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@color/themeColor"
        android:orientation="vertical" >

    </RelativeLayout>

</RelativeLayout>

    <ImageView
        android:id="@+id/success"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/success"
        app:layout_constraintBottom_toTopOf="@+id/confirmMessage"
        app:layout_constraintEnd_toEndOf="@+id/popupDialogFrame"
        app:layout_constraintStart_toStartOf="@+id/popupDialogFrame"
        app:layout_constraintTop_toTopOf="@+id/popupDialogFrame"
        app:layout_constraintVertical_bias="0.300" />

    <ImageView
        android:id="@+id/closeWindow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmMessage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Specials Confirmed! You could earn up to ? Ole points!"
        android:textColor="@color/dimgrey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/confirmspecialsbtn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="Confirm"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/popupDialogFrame"
        app:layout_constraintEnd_toEndOf="@+id/popupDialogFrame"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmMessage"
        app:layout_constraintVertical_bias="0.755" />

    <TextView
        android:id="@+id/end"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="Cancel"
        android:textColor="@color/dimgrey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/popupDialogFrame"
        app:layout_constraintEnd_toStartOf="@+id/confirmspecialsbtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmMessage"
        app:layout_constraintVertical_bias="0.755" />

</android.support.constraint.ConstraintLayout>
