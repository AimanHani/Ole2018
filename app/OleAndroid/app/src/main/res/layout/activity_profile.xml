<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.Profile"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/themeColor"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="PROFILE"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pointsHeader"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Ole Points"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/pointsGotten"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="0.0"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/pointsHeader"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ImageView
        android:id="@+id/crown"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/pointsHeader"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:srcCompat="@drawable/crown" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="#FFE6ECFE"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:background="#FFE6ECFE"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Wei En Li"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/profileCountry"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:background="#FFE6ECFE"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:text="Country"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileName" />

    <ImageView
        android:id="@+id/countryImage"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:layout_marginEnd="150dp"
        android:background="#FFE6ECFE"
        app:layout_constraintEnd_toEndOf="@+id/userCountry"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:srcCompat="@drawable/singapore" />

    <TextView
        android:id="@+id/userCountry"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:background="#FFE6ECFE"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Singapore"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <TextView
        android:id="@+id/profileFavTeam"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:background="#FFE6ECFE"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:text="Favourite Team"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileCountry" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:layout_marginEnd="150dp"
        android:background="#FFE6ECFE"
        app:layout_constraintEnd_toEndOf="@+id/userFavTeam"
        app:layout_constraintTop_toTopOf="@+id/userFavTeam"
        app:srcCompat="@drawable/arsenal" />

    <TextView
        android:id="@+id/userFavTeam"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#FFE6ECFE"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Arsenal"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userCountry" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="298dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="293dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/predictionHeader"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="208dp"
        android:background="@color/themeColor"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="PREDICTIONS"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TableLayout
        android:id="@+id/predictTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/predictionHeader">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <TextView
                android:id="@+id/totWon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="4"
                android:background="@drawable/border"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Total Won"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotLost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Total Lost"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <TextView
                android:id="@+id/wonQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="0.0"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lostQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="0.0"
                android:textAlignment="center"
                android:textColor="#FFBC0000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <TextView
                android:id="@+id/totPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Total Played"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Accuracy"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <TextView
                android:id="@+id/playQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="0.0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/accQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="0.00%"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/themeColor"
        android:gravity="center"
        android:text="Back to Home"
        android:textColor="@color/white"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>