<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/blackoutimage"
        android:scaleType="fitXY"
        android:background="@drawable/blackoverlay"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addmeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:clickable="true"
        android:src="@drawable/bestplayer"
        android:visibility="invisible"
        app:fabSize="mini"
        app:fabCustomSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/diary"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="12dp" />

    <TextView
        android:id="@+id/addmealtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/addmeal"
        android:text="Add Meal"
        android:textColor="#FFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/addmeal"
        app:layout_constraintEnd_toStartOf="@+id/addmeal"
        app:layout_constraintTop_toTopOf="@+id/addmeal" />


    <TextView
        android:id="@+id/diarytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/addmeal"
        android:text="Diary"
        android:textColor="#FFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/diary"
        app:layout_constraintEnd_toStartOf="@+id/diary"
        app:layout_constraintTop_toTopOf="@+id/diary" />

    <TextView
        android:id="@+id/cameratext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/addmeal"
        android:text="Food Image Recognition"
        android:textColor="#FFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/camera"
        app:layout_constraintEnd_toStartOf="@+id/camera"
        app:layout_constraintTop_toTopOf="@+id/camera" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:clickable="true"
        android:src="@drawable/bestplayer"
        android:visibility="invisible"
        app:fabSize="mini"
        app:fabCustomSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="12dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:clickable="true"
        android:src="@drawable/bestplayer"
        android:visibility="invisible"
        app:fabSize="mini"
        app:fabCustomSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:clickable="true"
        app:layout_behavior="com.eventizon.behavior.ScrollAwareFABBehavior"
        android:src="@drawable/add"
        app:fabSize="mini"
        app:fabCustomSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="12dp" />

</android.support.constraint.ConstraintLayout>