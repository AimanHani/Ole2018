<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/popupDialogFrame"
        android:layout_width="295dp"
        android:layout_height="280dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@color/themeColor"
            android:orientation="vertical">
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/success"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/success"
        app:layout_constraintBottom_toTopOf="@+id/successfulMessage"
        app:layout_constraintEnd_toEndOf="@+id/successfulMessage"
        app:layout_constraintStart_toStartOf="@+id/successfulMessage"
        app:layout_constraintTop_toTopOf="@+id/popupDialogFrame" />

    <TextView
        android:id="@+id/successfulMessage"
        android:layout_width="265dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Successful"
        android:textColor="@color/dimgrey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="Confirm"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/popupDialogFrame"
        app:layout_constraintEnd_toEndOf="@+id/popupDialogFrame"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmMessage"
        app:layout_constraintVertical_bias="0.755" />


</android.support.constraint.ConstraintLayout>
